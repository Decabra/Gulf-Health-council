<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                    <!--                    <gradient android:startColor="#fff" android:endColor="#ffff" android:angle="270" />-->
                    <stroke android:width="4px" android:color="@color/colorPrimary" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item
                android:width="12dp"
                android:height="12dp"
                android:bottom="10dp"
                android:right="10dp"
                android:gravity="center|right">

                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorBackgroundWindow" />
                        <stroke
                            android:width="1dp"
                            android:color="#000000" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="50dp"
                android:height="10dp"
                android:bottom="19dp"
                android:right="1dp"
                android:gravity="center|right">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBackgroundWindow"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>